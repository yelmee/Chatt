<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/myChatItem_textView_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="오전 6:00"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/myChatItem_textView_message"
        app:layout_constraintEnd_toStartOf="@+id/myChatItem_textView_message" />

    <TextView
        android:maxWidth="300dp"
        android:id="@+id/myChatItem_textView_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/outcoming"
        android:lineSpacingExtra="2dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="메세지창"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.8" />


    <ImageView
        android:id="@+id/myChatItem_imageView_sendCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/myChatItem_textView_at"
        app:layout_constraintEnd_toStartOf="@+id/myChatItem_textView_at"
        app:layout_constraintTop_toTopOf="@+id/myChatItem_textView_at"
        app:srcCompat="@drawable/ic_chevron_left_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>