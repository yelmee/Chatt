<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/messageItem_imageView_profile"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/messageItem_textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="정예림"
        app:layout_constraintStart_toEndOf="@+id/messageItem_imageView_profile"
        app:layout_constraintTop_toTopOf="@+id/messageItem_imageView_profile" />

    <TextView
        android:id="@+id/messageItem_textView_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="오전 6:00"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_message_incoming"
        app:layout_constraintStart_toEndOf="@+id/text_message_incoming" />

    <TextView
        android:id="@+id/text_message_incoming"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/incoming"
        android:lineSpacingExtra="2dp"
        android:paddingLeft="20dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="Hi, How are you?"
        android:textColor="@color/colorBlack"
        android:textSize="13.5dp"
        app:layout_constraintStart_toEndOf="@+id/messageItem_imageView_profile"
        app:layout_constraintTop_toBottomOf="@+id/messageItem_textView_name"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.8" />


</androidx.constraintlayout.widget.ConstraintLayout>